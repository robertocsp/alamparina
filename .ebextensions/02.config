container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python alamparina/manage.py runserver 0.0.0.0:8000"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "alamparina.settings"
    "PYTHONPATH": "/opt/python/current/app/alamparina:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: alamparina/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"

